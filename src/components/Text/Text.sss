@import 'variables.sss';

.text
  display: block
  font-size: 14px
  line-height: 1.4
  color: var(--darkBlue)
  cursor: inherit

  &_color_gray
    color: var(--gray)

  &_color_inherit
    color: inherit

  &_size_medium
    font-size: 16px

  &_size_big
    font-size: 18px

  &_bold
    font-weight: 700

  &_theme_upper
    text-transform: uppercase
